# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/vault37_db

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Email Configuration (Optional - for later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@vault37.com

# SMS Configuration (Optional - for later)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# File Upload (Optional - for later)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Paystack Configuration (Payment Gateway)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_CALLBACK_URL=http://localhost:5001/api/wallet/paystack/callback

# TPIA Configuration (Investment System)
# These values control the core economics of the TPIA investment product
TPIA_INVESTMENT_AMOUNT=1000000   # Investment amount per TPIA (₦1,000,000)
TPIA_PROFIT_AMOUNT=50000         # Profit per cycle (₦50,000 = 5% return)
TPIA_CYCLE_DAYS=37               # Duration of each trading cycle (37 days)
TPIA_TOTAL_CYCLES=24             # Total number of cycles (24 cycles = ~2.4 years)
TPIA_CORE_CYCLES=12              # Mandatory core investment phase (12 cycles)
TPIA_EXTENDED_CYCLES=12          # Optional extended investment phase (12 cycles)
TPIA_EXIT_WINDOW_INTERVAL=3      # Exit window frequency in extended phase (every 3 cycles)
TPIA_EXIT_WINDOW_DURATION=14     # Duration of exit window in days
TPIA_APPROVAL_MIN=30             # Minimum admin approval window (30 minutes)
TPIA_APPROVAL_MAX=60             # Maximum admin approval window (60 minutes)
TPIA_AUTO_APPROVE=true           # Enable auto-approval after max window

# Early Exit Penalties (Hardcoded in constants.js Logic)
# - Cycle 15 Exit: 40% Penalty (60% Principal Return)
# - Cycle 18 Exit: 30% Penalty (70% Principal Return)
# - Cycle 21 Exit: 20% Penalty (80% Principal Return)
# - Cycle 24 Exit: 0% Penalty (100% Principal Return)

# GDC Configuration (Commodity Clusters)
GDC_SIZE=10                      # Number of TPIAs per GDC cluster (10)
GDC_INCREMENT=10                 # GDC numbering increment (10, 20, 30...)

# Platform Economics (Arbitrage Modeling)
# Expected monthly profit margin on agricultural arbitrage (e.g. 10.5% - 15%)
# This used to calculate the Platform's estimated yield in dashboard statistics
PLATFORM_ARBITRAGE_MARGIN=10.5
